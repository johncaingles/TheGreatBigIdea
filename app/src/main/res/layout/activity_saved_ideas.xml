<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.john.thegreatbigidea.Settings"
    android:background="#fff5f7f8">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Theories"
            android:id="@+id/textView4"
            android:textSize="40dp"
            android:paddingBottom="20dp"
            android:textColor="#ff2980b9"
            android:textStyle="bold"
            android:layout_alignRight="@+id/gridView"
            android:layout_alignEnd="@+id/gridView"
            android:layout_alignTop="@+id/textView4" />

        <GridView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gridView"
            android:numColumns="2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Your thoughts in place"
            android:id="@+id/textView4"
            android:paddingBottom="40dp"
            android:textColor="#ff34495e"
            android:textSize="12dp"
            android:layout_alignRight="@+id/gridView"
            android:layout_alignEnd="@+id/gridView"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="&lt;"
            android:id="@+id/textView4"
            android:textSize="40dp"
            android:textColor="#ff2980b9"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/gridView"
            android:layout_alignStart="@+id/gridView" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:background="@android:color/transparent"
            android:shadowColor="@android:color/transparent"
            android:visibility="visible"
            android:enabled="true"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4" />




</RelativeLayout>
