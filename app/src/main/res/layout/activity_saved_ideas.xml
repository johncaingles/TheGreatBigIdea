<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.john.thegreatbigidea.savedIdeas">

    <RelativeLayout
        tools:context="com.example.john.thegreatbigidea.Settings"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#fff5f7f8"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Theories"
            android:id="@+id/textView4"
            android:textSize="40dp"
            android:paddingBottom="20dp"
            android:textColor="#ff2980b9"
            android:textStyle="bold"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Your thoughts in place"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView4"
            android:paddingBottom="40dp" />

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="139dp"
                android:layout_height="139dp"
                android:id="@+id/imageView3"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@drawable/b" />

            <ImageView
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:id="@+id/imageView4"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@drawable/g" />

            <ImageButton
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:id="@+id/imageButton2"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@drawable/c" />

            <ImageView
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:id="@+id/imageView5"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@drawable/j" />
        </GridLayout>
    </RelativeLayout>
</RelativeLayout>
