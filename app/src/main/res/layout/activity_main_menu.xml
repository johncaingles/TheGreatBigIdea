<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.john.thegreatbigidea.MainMenu"
    android:background="#fff5f7f8">

    <TextView android:text="The great big idea" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff2980b9"
        android:textSize="65dp"
        android:gravity="top|center_horizontal"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dip"
        android:id="@+id/imageView2"
        android:src="@drawable/bulb"
        android:adjustViewBounds="true"
        android:focusable="false"
        android:maxHeight="70dp"
        android:maxWidth="170dp"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="165dip"
        android:layout_height="70dip"
        android:id="@+id/kickOffBtn"
        android:adjustViewBounds="true"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/kickoffbutton"
        android:clickable="true" />

    <ImageButton
        android:layout_width="165dip"
        android:layout_height="70dip"
        android:id="@+id/theoriesBtn"
        android:adjustViewBounds="true"
        android:layout_below="@+id/kickOffBtn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/theoriesbutton"
        android:clickable="true" />

    <ImageButton
        android:layout_width="165dip"
        android:layout_height="70dip"
        android:id="@+id/conceptBtn"
        android:adjustViewBounds="true"

        android:layout_below="@+id/theoriesBtn"
        android:layout_alignLeft="@+id/theoriesBtn"
        android:layout_alignStart="@+id/theoriesBtn"
        android:background="@drawable/definebutton"
        android:clickable="true" />


</RelativeLayout>
