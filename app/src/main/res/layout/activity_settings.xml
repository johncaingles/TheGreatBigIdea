<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.john.thegreatbigidea.Settings"
    android:background="#fff5f7f8">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alron Senpai"
        android:id="@+id/alronCb"
        android:textSize="25dp"
        android:paddingBottom="20dp"
        android:layout_alignParentStart="true"
        android:checked="true"
        android:enabled="true"
        android:textColor="#ff34495e"
        android:layout_below="@+id/peopleCb"
        android:layout_alignParentLeft="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entertainment"
        android:id="@+id/entertainmentCb"
        android:textSize="25dp"
        android:layout_alignParentStart="true"
        android:paddingBottom="20dp"
        android:checked="true"
        android:enabled="true"
        android:textColor="#ff34495e"
        android:layout_below="@+id/educationCb"
        android:layout_alignParentLeft="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Everyday Things"
        android:id="@+id/everydayCb"
        android:textSize="25dp"
        android:layout_alignParentStart="true"
        android:paddingBottom="20dp"
        android:checked="true"
        android:enabled="true"
        android:textColor="#ff34495e"
        android:layout_below="@+id/entertainmentCb"
        android:layout_alignParentLeft="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Education"
        android:id="@+id/educationCb"
        android:textSize="25dp"
        android:layout_alignParentStart="true"
        android:paddingBottom="20dp"
        android:checked="true"
        android:enabled="true"
        android:textColor="#ff34495e"
        android:layout_below="@+id/alronCb"
        android:layout_alignParentLeft="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People"
        android:id="@+id/peopleCb"
        android:textSize="25dp"
        android:paddingBottom="20dp"
        android:checked="true"
        android:enabled="true"
        style="@style/AppTheme"
        android:textColor="#ff34495e"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Categories"
        android:id="@+id/textView2"
        android:textSize="40dp"
        android:paddingBottom="20dp"
        android:textColor="#ff2980b9"
        android:textStyle="bold"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Define your filters"
        android:id="@+id/textView3"
        android:textColor="#ff34495e"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="12dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="@android:color/transparent"
        android:shadowColor="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        android:enabled="true"
        android:clickable="true"
        android:textColor="#ff2980b9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="&lt;"
        android:id="@+id/textView8"
        android:textSize="40dp"
        android:textColor="#ff2980b9"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
