<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.john.thegreatbigidea.Settings"
    android:background="#fff5f7f8">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alron Senpai"
        android:id="@+id/alronCb"
        android:textSize="25dp"
        android:paddingBottom="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/educationCb"
        android:layout_alignParentLeft="true"
        android:checked="true"
        android:enabled="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entertainment"
        android:id="@+id/entertainmentCb"
        android:textSize="25dp"
        android:layout_alignParentStart="true"
        android:paddingBottom="20dp"
        android:layout_below="@+id/everydayCb"
        android:layout_alignParentLeft="true"
        android:checked="true"
        android:enabled="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Everyday Things"
        android:id="@+id/everydayCb"
        android:textSize="25dp"
        android:layout_alignParentStart="true"
        android:paddingBottom="20dp"
        android:layout_below="@+id/peopleCb"
        android:layout_alignParentLeft="true"
        android:checked="true"
        android:enabled="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Education"
        android:id="@+id/educationCb"
        android:textSize="25dp"
        android:layout_alignParentStart="true"
        android:paddingBottom="20dp"
        android:layout_below="@+id/entertainmentCb"
        android:layout_alignParentLeft="true"
        android:checked="true"
        android:enabled="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People"
        android:id="@+id/peopleCb"
        android:textSize="25dp"
        android:paddingBottom="20dp"
        android:checked="true"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="85dp"
        android:enabled="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Categories"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="40dp"
        android:paddingBottom="20dp"
        android:textColor="#ff2980b9"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Define your filters"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />
</RelativeLayout>
